<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.Medida" table="medida" lazy="false">
		<id name="id" column="id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="sensor" cascade="lock" column="sensor_id" class="model.Sensor" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="created_at" column="created_at" type="timestamp" not-null="true" lazy="false"/>
		<property name="saturacion" column="saturacion" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="temperatura" column="temperatura" type="integer" length="10" not-null="true" lazy="false"/>
	</class>
</hibernate-mapping>
