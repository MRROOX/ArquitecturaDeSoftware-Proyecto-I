<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.Usuario" table="usuario" lazy="false">
		<id name="id" column="id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="rol" column="rol_id" class="model.Rol" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="created_at" column="created_at" type="timestamp" not-null="true" lazy="false"/>
		<property name="nombre" column="nombre" unique="true" type="string" length="50" not-null="true" lazy="false"/>
		<property name="password" column="password" type="string" length="255" not-null="true" lazy="false"/>
		<property name="correo" column="correo" unique="true" type="string" length="80" not-null="true" lazy="false"/>
		<set name="ORM_Preguntas" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="usuario_id" not-null="true"/>
			<one-to-many class="model.Pregunta"/>
		</set>
	</class>
</hibernate-mapping>
