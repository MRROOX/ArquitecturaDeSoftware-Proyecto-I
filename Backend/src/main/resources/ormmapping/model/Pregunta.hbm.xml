<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="model.Pregunta" table="pregunta" lazy="false">
		<id name="id" column="id" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="usuario" cascade="lock" column="usuario_id" class="model.Usuario" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="created_at" column="created_at" type="timestamp" not-null="true" lazy="false"/>
		<property name="pregunta" column="pregunta" type="string" length="255" not-null="true" lazy="false"/>
		<property name="descripcion" column="descripcion" type="text" not-null="true" lazy="false"/>
		<property name="aprobado" column="aprobado" type="boolean" not-null="true" lazy="false"/>
		<set name="ORM_Respuestas" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="pregunta_id" not-null="true"/>
			<one-to-many class="model.Respuesta"/>
		</set>
	</class>
</hibernate-mapping>
